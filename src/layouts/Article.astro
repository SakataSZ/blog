---
import Document from "./Document.astro";

const { content } = Astro.props;
---

<Document title={content.title}>
  <div class="article">
    <slot />
  </div>
</Document>

<style is:inline>
  .article {
    max-width: 768px;
    margin: 100px auto 0 auto;
    padding: 2rem 2rem;
    background-color: var(--bg-paper);
    border-radius: 1rem;
  }

  .article h1 {
    font-size: 1.6rem;
    margin: 1.5rem 0 1rem 0;
  }
  .article h1::before {
    content: "ðŸš€";
    margin-right: 0.5rem;
  }
  .article h2 {
    font-size: 1.5rem;
    margin: 3rem 0 0rem 0;
    padding: 0 0 0.2rem 0;
  }
  .article h3 {
    font-size: 1.2rem;
    margin: 0.5rem 0 0.5rem 0;
    display: flex;
    align-items: center;
  }
  .article h3::before {
    content: "ðŸ“Œ";
    margin-right: 0.5rem;
  }

  .article p {
    margin: 0.5rem 0;
    font-size: 1rem;
    letter-spacing: 0.1rem;
    line-height: 1.8rem;
  }

  .article ul {
    list-style: none;
    margin: 1rem 0.5rem;
  }
  .article ul li {
    margin: 0.5rem 0;
    line-height: 1.5rem;
  }
  .article ul li::before {
    content: "";
    display: inline-block;
    position: relative;
    top: -0.1rem;
    width: 0.3rem;
    height: 0.3rem;
    border-radius: 50%;
    background-color: var(--text-primary);
    margin-right: 1rem;
  }

  .article a {
    word-break: break-all;
  }

  .article p code {
    font-family: consolas;
    letter-spacing: 0;
    background: #eee;
    padding: 0.1rem 0.4rem;
    border-radius: 0.2rem;
  }

  .article img {
    max-width: 100%;
    margin: 1rem 0;
    border-radius: 0.7rem;
  }

  .astro-code {
    margin: 1rem 0 2rem 0;
    padding: 1rem;
    border-radius: 0.7rem;
  }

  .article blockquote {
    border-left: 4px solid #ffffff;
    border-image: linear-gradient(to bottom, #06daff 0%, #3c69ff 100%);
    border-image-slice: 1;
    padding-left: 1rem;
    margin-left: 0;
  }

  @media (max-width: 800px) {
    .article {
      margin: 80px 5px 0 5px;
      padding: 10px;
    }
    .article h1 {
      font-size: 1.4rem;
    }
    .article h2 {
      font-size: 1.3rem;
    }
    .article h3 {
      font-size: 1.1rem;
    }
  }
</style>
