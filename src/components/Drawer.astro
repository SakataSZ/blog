---
import routes from "@/constants/routes";
---

<div class="drawer">
  <ul class="drawer-list">
    {
      routes.map((route) => (
        <li>
          <a href={route.href}>
            <p class="icon">{route.icon}</p>
            <p class="text">{route.title}</p>
          </a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .drawer {
    position: fixed;
    top: 60px;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(255, 255, 255, 0.8);
    z-index: 100;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    pointer-events: none;
  }
  .drawer.open {
    opacity: 1;
    transition: opacity 0.2s ease-in-out;
    pointer-events: auto;
    backdrop-filter: blur(5px);
  }
  .drawer-list {
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 1.2rem;
  }
  .drawer-list a {
    display: flex;
    align-items: center;
    padding: 1rem 20px;
    border-bottom: 1px solid rgba(100, 100, 100, 0.2);
    text-align: center;
    cursor: pointer;
  }
  .drawer-list li:hover {
    background-color: rgba(100, 100, 100, 0.2);
  }
  p.icon {
    margin-right: 1rem;
  }
</style>
