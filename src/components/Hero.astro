---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="hero">
  <h1>{title}</h1>
</div>

<style>
  .hero {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 60px;
    padding: 40px 20px;
    background: var(--gradient);
    color: white;
  }
</style>
